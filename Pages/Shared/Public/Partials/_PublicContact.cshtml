
<section id="contact" class="section bg-color-grey-scale-1 border-0 py-0 m-0">
    <div class="container-fluid">
        <div class="row" style="justify-content: center;align-items: center;">
            <div class="col-md-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d890606.762601725!2d47.02081908274328!3d29.31365072706438!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3fc5363fbeea51a1%3A0x74726bcd92d8edd2!2sKuwait!5e0!3m2!1sen!2skw!4v1704961796082!5m2!1sen!2skw" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            <div class="col-md-6 p-5 my-5">

                <div class="px-4">
                    <h2 class="font-weight-bold line-height-1 mb-2">@sharedResource["Contact Us"]</h2>
                    <form class=" form-style-2 pe-xl-5" asp-page="/Index" asp-page-handler="AddContactUS" method="POST">
                    
                        <div class="row">
                            <div class="form-group col-xl-4">
                                <input type="text" value="" data-msg-required="@sharedResource["Please enter your name."]" maxlength="100" class="form-control" name="name" placeholder="@sharedResource["Name"]" required>
                            </div>
                            <div class="form-group col-xl-8">
                                <input type="email" value="" data-msg-required="@sharedResource["Please enter your email address."]" data-msg-email="@sharedResource["Please enter your email address."]" maxlength="100" class="form-control" name="email" placeholder="@sharedResource["Email"]" required>
                            </div>
                        </div>
                     
                        <div class="row">
                            <div class="form-group col">
                                <textarea maxlength="5000" data-msg-required="@sharedResource["Please enter your message."]" rows="4" class="form-control" name="message" placeholder="@sharedResource["Message"]" required></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col">
                                <input type="submit" value="@sharedResource["SUBMIT"]" class="btn btn-primary btn-rounded font-weight-semibold px-5 btn-py-2 text-2" data-loading-text="@sharedResource["Loading..."]">

                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>


