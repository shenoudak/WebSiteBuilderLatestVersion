            <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container  container-xxl d-flex flex-stack ">



<!--begin::Page title-->
<div class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
    <!--begin::Title-->
    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
        @sharedResource["UserSites"]
            </h1>
    <!--end::Title-->


        <!--begin::Breadcrumb-->
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                            <!--begin::Item-->
                                    <li class="breadcrumb-item text-muted">
                            <a href="admin/index" class="text-muted text-hover-primary">
                                @sharedResource["Home"]                              </a>
                                            </li>
                                <!--end::Item-->
                                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->

                            <!--begin::Item-->
                                    <li class="breadcrumb-item text-muted">
                            @sharedResource["UserSites"]
                        </li>
                                <!--end::Item-->

                    </ul>
        <!--end::Breadcrumb-->
    </div>

        </div>
        <!--end::Toolbar container-->
    </div>
<!--end::Toolbar-->                                        

<!--begin::Content-->
<div id="kt_app_content" class="app-content  flex-column-fluid ">


        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container  container-xxl ">


<div class="d-flex flex-wrap flex-stack mb-6" data-select2-id="select2-data-125-uxft">
    <!--begin::Title-->
    <h3 class="text-gray-800 fw-bold my-2">
        @sharedResource["Sites"] 
        <span class="fs-6 text-gray-400 fw-semibold ms-1">(@Model.SitesCount)</span>
    </h3>
   
</div>
<!--end::Followers toolbar-->

<!--begin::Row-->
<div class="row g-6 mb-6 g-xl-9 mb-xl-9">
    <!--begin::Followers-->

    <!--begin::Col-->
                    @{
                        if (Model.Sites != null)
                        {
                            if (Model.Sites.Count != 0)
                            {
                                foreach (var item in Model.Sites)
                                {
                                    <div class="col-md-6 col-xxl-4">
                                        <!--begin::Card-->
                                        <div class="card ">
                                            <!--begin::Card body-->
                                            <div class="card card-flush flex-row-fluid p-6 pb-5 mw-100">
                                                <!--begin::Body-->
                                                <div class="card-body text-center">
                                                    <!--begin::Food img-->
                                                    <img src="/@item.Templates.TemplatePic" class="rounded-3 mb-4 w-150px h-150px w-xxl-200px h-xxl-200px" alt="">
                                                    <!--end::Food img-->
                                                    <!--begin::Info-->
                                                    <div class="mb-2">
                                                        <!--begin::Title-->
                                                        <div class="text-center">
                                                            <span class="fw-bold text-gray-800 cursor-pointer text-hover-primary fs-3 fs-xl-1">
                                                            @item.SiteTitle </span>
                                                            @if (@Model.BrowserCulture == "en-US")
                                                            {
                                                            <span class="text-gray-400 fw-semibold d-block fs-6 mt-n1">@item.Templates?.TitleEn</span>


                                                            }
                                                            else
                                                            {
                                                            <span class="text-gray-400 fw-semibold d-block fs-6 mt-n1">@item.Templates?.TitleAr</span>




                                                            }
                                                        </div>
                                                        <!--end::Title-->
                                                    </div>
                                                    <!--end::Info-->
                                                    <!--begin::Total-->
                                                    @{
                                                        @if (item.IsPaid)
                                                        {
                                                            @if (@Model.BrowserCulture == "en-US")
                                                            {
                                                                <span> @sharedResource["Paid:"] @item.UserTemplatePrice <span>KD</span> </span>

                                                            }
                                                            else
                                                            {
                                                                <span> @sharedResource["Paid:"] @item.UserTemplatePrice  <span>دينار</span></span>



                                                            }

                                                        }
                                                        else
                                                        {
                                                            if (@item.UserTemplatePrice == 0)
                                                            {
                                                                <span> <a href="#">@sharedResource["Not Paid:"] @sharedResource["Free"]</a></span>

                                                            }
                                                            else
                                                            {
                                                                @if (@Model.BrowserCulture == "en-US")
                                                                {
                                                                    <span> <a href="#">@sharedResource["Not Paid:"] @item.UserTemplatePrice</a> <span>KD</span></span>



                                                                }
                                                                else
                                                                {
                                                                    <span> <a href="#">@sharedResource["Not Paid:"] @item.UserTemplatePrice</a>  <span>دينار</span></span>


                                                                }

                                                            }
                                                            

                                                        }
                                                    }
                                                   
                                                    <!--end::Total-->
                                                </div>
                                                <!--end::Body-->
                                            </div>

                                            <!--begin::Card body-->

                                            </div>
                                        <!--begin::Card-->
                                    </div>

                                }
                            }

                            else if (Model.Sites == null || Model.Sites.Count == 0)
                            {

                                <h1 style="text-align:center;padding-top:8rem">@sharedResource["There is no Sites"]</h1>

                            }
                        }

                        
                    }

    <!--end::Col-->
   
</div>
      </div>
        <!--end::Content container-->
    </div>
<!--end::Content-->					
                </div>
                <!--end::Content wrapper-->


