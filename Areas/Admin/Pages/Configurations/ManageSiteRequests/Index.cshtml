            url: "/Admin/Configurations/ManageSiteRequests/Index?handler=SingleSiteModificationRequestForDelete",
            data: { "SiteModificationRequestId": SiteModificationRequestId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DeleteSiteModificationRequestId").value = response.SiteModificationRequestId
