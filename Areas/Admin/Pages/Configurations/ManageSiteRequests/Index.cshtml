    function editButtonClick(SiteModificationRequestId) {
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/Configurations/ManageSiteRequests/Index?handler=SingleSiteModificationRequestForEdit",

            data: { "SiteModificationRequestId": SiteModificationRequestId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("HiddenId").value = response.SiteModificationRequestId
                document.getElementById("ModificationDescriptionID").value = response.ModificationDescription
                document.getElementById("TitleEnID").value = response.TitleEn
                document.getElementById("EIsActiveId").checked = response.IsActive
                document.getElementById("SortOrderID").value = response.SortOrder


                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }

    // === VIEW ===//
    function ShowViewPopUp(SiteModificationRequestId) {

        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageSiteRequests/Index?handler=SingleSiteCategoriesForView",
            data: { "SiteModificationRequestId": SiteModificationRequestId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                if (response.Pic != null) {
                    document.getElementById("PicId").src = "/" + response.Pic
                }

                document.getElementById("TitleENSiteModificationRequestId").innerHTML = response.TitleEn
                document.getElementById("TitleARSiteModificationRequestId").innerHTML = response.TitleAr
                document.getElementById("SORTORDERSiteModificationRequestId").innerHTML = response.SortOrder
                if (response.IsActive == true) {
                    document.getElementById("DIsActiveId").innerHTML = '<span class="badge badge-light-success fs-7 fw-bold">@sharedResource["Active"]</span>';

                }
                else {
                    document.getElementById("DIsActiveId").innerHTML = `<span class="badge badge-light-danger fs-7 fw-bold">@sharedResource["In Active"]</span>`;
                }


                $('#QuickViewPoup').modal('show');
            },
            failure: function (response) {
                alert(response);
            }
        });

    }


    function deleteSiteModificationRequest(SiteModificationRequestId) {

