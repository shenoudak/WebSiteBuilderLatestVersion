    function editButtonClick(Id) {
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Admin/Configurations/ManageDesigner/Index?handler=SingleEditorForEdit",

            data: { "Id": Id },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("HiddenId").value = response.Id
                document.getElementById("TitleArID").value = response.FullName
                document.getElementById("TitleEnID").value = response.Email
                document.getElementById("EIsActiveId").checked = response.IsActive


                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }

    // === VIEW ===//
    function ShowViewPopUp(Id) {

        $.ajax({
            type: "GET",
            url: "/Admin/Configurations/ManageDesigner/Index?handler=SingleEditorForView",
            data: { "Id": Id },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                if(response.Pic!=null){
                    document.getElementById("PicId").src = "/" + response.UserPic
                }
                
                document.getElementById("TitleENId").innerHTML = response.FullName
                document.getElementById("TitleARId").innerHTML = response.Email
                if (response.IsActive == true) {
                    document.getElementById("DIsActiveId").innerHTML = '<span class="badge badge-light-success fs-7 fw-bold">@sharedResource["Active"]</span>';

                }
                else {
                    document.getElementById("DIsActiveId").innerHTML = `<span class="badge badge-light-danger fs-7 fw-bold">@sharedResource["In Active"]</span>`;
                }


                $('#QuickViewPoup').modal('show');
            },
            failure: function (response) {
                alert(response);
            }
        });

    }


    function deleteEditor(Id) {

        document.getElementById("DeleteEditorId").value = Id;
        console.log("Id", Id);
        $('#deleteRecordModal').modal('show');
    }
