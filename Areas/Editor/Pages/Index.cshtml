@page
@model iTech.Areas.Editor.Pages.IndexModel
@{
	Layout = "_Layout";
}


<partial name="_ViewPopup"  view-data="ViewData" />
<script src="~/assets/libs/apexcharts/apexcharts.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container  container-fluid d-flex flex-stack ">
            <!--begin::Page title-->
            <div data-kt-swapper="true" data-kt-swapper-mode="{default: 'prepend', lg: 'prepend'}" data-kt-swapper-parent="{default: '#kt_app_content_container', lg: '#kt_app_toolbar_container'}" class="page-title d-flex flex-column justify-content-center flex-wrap me-3 mb-5 mb-lg-0">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                    @sharedResource["Site Modification Requests"]
                </h1>
                <!--end::Title-->
            </div>
            <!--end::Page title-->
            
        </div>
        <!--end::Toolbar container-->
    </div>
    <div id="kt_app_content" class="app-content  flex-column-fluid ">


        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container  container-fluid ">

            <div class="card">

                <div class="card-body">
                    <table id="tblList" class="table table-striped table-row-bordered gy-5 gs-7 border rounded">
                        <thead>
                            <tr class="fw-bold fs-6 text-gray-800 px-7">
                                <th hidden>id</th>
                                <th class="min-w-125px">@sharedResource["StartDate"]</th>
                                <th class="min-w-125px">@sharedResource["Modification Description"]</th>
                                <th class="min-w-125px">@sharedResource["EndDate"]</th>

                                @* <th class="min-w-125px">@sharedResource["IsAccepted"]</th>
                                <th class="min-w-125px">@sharedResource["IsFinished"]</th> *@
                                <th class="min-w-125px text-end">@sharedResource["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>


                </div>

            </div>

        </div>

    </div>
</div>
<script src="~/Other/lib/jquery/dist/jquery.min.js"></script>



<script>
    $(document).ready(function () {
        $("#tblList").DataTable({
            "proccessing": true,
            "serverSide": true,
            "ajax": {

                url: "/Editor/Index",
                type: 'POST',
                headers: { 'XSRF-TOKEN': $('@Html.AntiForgeryToken()').val() }
            },
            "columnDefs": [
                {
                    "targets": -1,
                    "data": null,
                    "render": function (data, type, row, meta) {
                        return `<a class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" href="/DefaultEditorDark?id=${row.SMReqId}">

                                                                                <i class="ki-duotone ki-code fs-2">
                                                                            <span class="path1"></span>
                                                                            <span class="path2"></span>
                                                                            <span class="path3"></span>
                                                                            <span class="path4"></span>
                                                                        </i>
                                                                        </a>`;
                    },
                    "sortable": false
                },
                
                { "name": "SMReqId", "data": "SMReqId", "targets": 0, "visible": false },
                {
                    "name": "StartDate", "data": "StartDate", "targets": 1,
                    "render": function (data, type, row, meta) {
                        if (type === "display" && data) {
                            return moment(data).format("MM/DD/YYYY");
                        }
                        return data;
                    }
                },
                { "name": "ModificationDescription", "data": "ModificationDescription", "targets": 2, "visible": true },
                    {
                    "name": "EndDate", "data": "EndDate", "targets": 3,
                    "render": function (data, type, row, meta) {
                        if (type === "display" && data) {
                            return moment(data).format("MM/DD/YYYY");
                        }
                        return data;
                    }
                }
                // ,
                // {
                //     "name": "IsAccepted", "data": "IsAccepted", "targets": 3,

                //     "render": function (data, type, row, meta) {
                //         if (row.IsAccepted) {
                //             return `<span class="badge badge-light-success fs-7 fw-bold">@sharedResource["Accepted"]</span>`;
                //         } else {
                //             return `<span class="badge badge-light-danger fs-7 fw-bold">@sharedResource["Not Accepted"]</span>`;
                //         }
                //     }

                // },
                // {
                //     "name": "IsFinished", "data": "IsFinished", "targets": 4,

                //     "render": function (data, type, row, meta) {
                //         if (row.IsFinished) {
                //             return `<span class="badge badge-light-success fs-7 fw-bold">@sharedResource["Finished"]</span>`;
                //         } else {
                //             return `<span class="badge badge-light-danger fs-7 fw-bold">@sharedResource["Not Finished"]</span>`;
                //         }
                //     }

                // }




            ],
            "order": [[1, "desc"]],
            "language": {
                "lengthMenu": "Show _MENU_",
            },
            "dom":
                "<'row'" +
                "<'col-sm-6 d-flex align-items-center justify-conten-start'l>" +
                "<'col-sm-6 d-flex align-items-center justify-content-end'f>" +
                ">" +

                "<'table-responsive'tr>" +

                "<'row'" +
                "<'col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start'i>" +
                "<'col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end'p>" +
                ">",
            "createdRow": function (row, data, dataIndex) {
                var tdElements = $(row).find('td');
                $(tdElements[tdElements.length - 1]).addClass('text-end');
            }
        });
    });

</script>     